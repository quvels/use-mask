{
  "name": "@quvels/use-mask",
  "version": "1.0.0",
  "description": "Mask hook for React",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "author": "Oscar Yáñez (oskr219)",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "module": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "demo": "vite",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.lib.json",
    "build:cjs": "tsc --project tsconfig.lib.json --module commonjs --outDir dist/cjs",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test -- --run && npm run prettier && npm run lint"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^18.8.2",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.0",
    "vitest": "^0.23.4"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "react",
    "typescript",
    "use-mask",
    "mask",
    "input",
    "hook",
    "hooks",
    "useMask"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quvels/use-mask.git"
  }
}